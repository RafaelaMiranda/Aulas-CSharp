<Window x:Class="Aula_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_01"
        mc:Ignorable="d"
        Title="Principal" Height="350" Width="525" WindowStartupLocation="CenterScreen">
	<Grid Background="DarkRed">
		<Label Style="{StaticResource Label_Nome}" Margin="10,120,0,175" Height="24">Digite seu nome</Label>
		<TextBox x:Name="nome" Style="{StaticResource TextBox_Nome}"/>
		<Button x:Name="btnEnviar" Style="{StaticResource Botao_Nome}" Click="Button_Click" >Enviar</Button>
		<Menu x:Name="menu" Style="{StaticResource Menu}" Width="517">
			<MenuItem Header="Controles" Height="24" Width="69" Click="MenuItem_Click"/>
			<MenuItem Header="Sair" Click="MenuItem_Click_2" RenderTransformOrigin="6.359,0.583"/>
		</Menu>
	</Grid>
</Window>
